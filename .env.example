# ORCHESTRATION SYSTEM - ROOT CONFIGURATION EXAMPLE
# Copy this file to .env and customize with your actual values

# ADK CONFIGURATION
GOOGLE_GENAI_USE_VERTEXAI=FALSE
GOOGLE_API_KEY=PASTE_YOUR_ACTUAL_API_KEY_HERE

# SHARED GIT WORKSPACE CONFIGURATION
GIT_WORKSPACE_PATH=./workspace
GIT_REPO_URL=your_git_repo_url_here
GIT_USER_NAME=Orchestration Agent
GIT_USER_EMAIL=orchestration@example.com
GIT_BRANCH=main
ENABLE_GIT_OPERATIONS=true
AUTO_COMMIT=true
COMMIT_MESSAGE_PREFIX=[Agent]

# A2A CONFIGURATION
A2A_HOST=localhost
A2A_PORT=8080
A2A_AUTH_TOKEN=your_a2a_auth_token_here
ENABLE_A2A_INTEGRATION=true
A2A_DISCOVERY_INTERVAL=300
MAX_EXTERNAL_AGENTS=10

# AGENT ENDPOINTS
SEARCH_AGENT_ENDPOINT=http://localhost:8001/search_agent
READ_WRITE_AGENT_ENDPOINT=http://localhost:8002/file_operations_agent
METACOGNITION_AGENT_ENDPOINT=http://localhost:8000/metacognition_agent

# AGENT MODELS AND SETTINGS
SEARCH_MODEL=gemini-2.0-flash-live-001
READ_WRITE_MODEL=gemini-2.0-flash-live-001
METACOGNITION_MODEL=gemini-2.0-flash-live-001

# TASK TRACKING AND METACOGNITION
TASK_WORKSPACE_PATH=./workspace
TASK_GIT_REPO_URL=your_task_repo_url_here
TASK_COMMIT_PREFIX=[Orchestration]
AUTO_COMMIT_TASKS=true
TASK_HISTORY_RETENTION_DAYS=30
ENABLE_INTERNAL_MONOLOGUE=true
ENABLE_PROGRESS_TRACKING=true
METACOGNITION_REFLECTION_INTERVAL=60
TASK_COMPLETION_THRESHOLD=0.95
MONOLOGUE_LOG_LEVEL=INFO

# ADDITIONAL SETTINGS
SEARCH_TIMEOUT_SECONDS=30
MAX_SEARCH_RESULTS=10
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.txt,.md,.py,.js,.json,.yaml,.yml,.html,.css
DEBUG=false
LOG_LEVEL=INFO

# SEPARATE TASK REPOSITORY CONFIGURATION
TASK_REPO_LOCAL_PATH=/Users/thyfriendlyfox/Projects/orchestration/workspace
TASK_REPO_BRANCH_STRATEGY=task-based
TASK_AUTO_PULL=true
TASK_AUTO_PUSH=false
